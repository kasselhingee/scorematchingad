
PKG_CPPFLAGS = -I../inst/include -Wno-ignored-attributes

$(SHLIB): RcppExports.o

approxwrap.o: cppadconfig
cppad_interface.o: cppadconfig
exposemanifold.o: cppadconfig
RcppExports.o: cppadconfig
tapebdryweight.o: cppadconfig
tapell.o: cppadconfig
tapesmd.o: cppadconfig

cppadconfig:
	(cd ../inst/cppad; \
	cmake . \
	-D CMAKE_BUILD_TYPE=minsizerel \
	-DBUILD_SHARED_LIBS:bool=OFF \
	-DCMAKE_POSITION_INDEPENDENT_CODE:bool=ON; \
	"$(R_HOME)/bin$(R_ARCH_BIN)/Rscript" -e 'file.copy("./include/cppad", "../include/", recursive = TRUE)')



